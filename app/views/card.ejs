        // Функция показа графика датчика
        function showSensorGraph(sensorId, patientName) {
            // Обновляем заголовок графика
            document.getElementById('chartTitle').textContent = `График показателей пациента ${patientName} (Датчик №${sensorId})`;
            
            // Показываем модальное окно
            const modal = new bootstrap.Modal(document.getElementById('chartModal'));
            modal.show();
            
            // Создаем график после показа модального окна
            setTimeout(() => {
                createSensorChart(sensorId);
            }, 100);
        }
        
        // Обработчик формы добавления пациента
        const addPatientForm = document.getElementById('addPatientForm');
        if (addPatientForm) {
            addPatientForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const patientData = {
                    FIO: formData.get('FIO'),
                    Datebirthday: formData.get('Datebirthday'),
                    Dategospital: formData.get('Dategospital'),
                    Datchik: formData.get('Datchik'),
                    History: formData.get('History'),
                    Diagnoz: formData.get('Diagnoz')
                };
                
                try {
                    const response = await fetch('/card', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(patientData)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert('Пациент успешно добавлен!');
                        // Закрываем модальное окно
                        const modal = bootstrap.Modal.getInstance(document.getElementById('addPatientModal'));
                        modal.hide();
                        // Очищаем форму
                        this.reset();
                        // Обновляем данные
                        socket.emit('requestPatientsData');
                    } else {
                        alert('Ошибка добавления пациента: ' + result.error);
                    }
                } catch (error) {
                    console.error('Ошибка добавления пациента:', error);
                    alert('Ошибка добавления пациента');
                }
            });
        }

        // Функция создания графика датчика
        function createSensorChart(sensorId) {
            const ctx = document.getElementById('sensorChart');
            if (!ctx) return;
            
            // Генерируем тестовые данные для графика (50 показаний)
            const labels = [];
            const temperatureData = [];
            const pulseData = [];
            
            const now = new Date();
            for (let i = 49; i >= 0; i--) {
                const time = new Date(now.getTime() - i * 30 * 60 * 1000); // каждые 30 минут
                labels.push(time.getHours().toString().padStart(2, '0') + ':' + time.getMinutes().toString().padStart(2, '0'));
                
                // Генерируем реалистичные данные
                const baseTemp = 36.6 + (Math.random() - 0.5) * 2; // 35.6 - 37.6
                const basePulse = 70 + (Math.random() - 0.5) * 20; // 60 - 80
                
                temperatureData.push(baseTemp.toFixed(1));
                pulseData.push(Math.round(basePulse));
            }
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Температура (°C)',
                            data: temperatureData,
                            borderColor: '#dc3545',
                            backgroundColor: 'rgba(220, 53, 69, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Пульс (уд/мин)',
                            data: pulseData,
                            borderColor: '#28a745',
                            backgroundColor: 'rgba(40, 167, 69, 0.1)',
                            tension: 0.4,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Время'
                            }
                        },
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Температура (°C)'
                            },
                            min: 35,
                            max: 40
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Пульс (уд/мин)'
                            },
                            min: 50,
                            max: 120,
                            grid: {
                                drawOnChartArea: false,
                            },
                        }
                    },
                    plugins: {
                        title: {
                            display: true,
                            text: `Данные датчика №${sensorId} за последние 25 часов`
                        }
                    }
                }
            });
        }
    </script>
